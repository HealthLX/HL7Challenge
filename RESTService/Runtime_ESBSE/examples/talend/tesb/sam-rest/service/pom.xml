<project xmlns="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.talend.esb.examples.sam-rest</groupId>
    <artifactId>sam-rest-demo-service</artifactId>
    <name>SAM REST Demo Service</name>
    <packaging>bundle</packaging>

    <parent>
        <groupId>org.talend.esb.examples.sam-rest</groupId>
        <artifactId>sam-rest-demo</artifactId>
        <version>6.1.1</version>
        <relativePath>..</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>sam-rest-demo-common</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Require-Bundle>
                            org.apache.cxf.cxf-core,
                            org.apache.servicemix.bundles.spring-beans,
                            org.apache.servicemix.bundles.spring-context,
                            sam-common,
                            sam-agent
                        </Require-Bundle>
                        <Import-Package>
                            demo.common,org.springframework.context.support
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <mainClass>demo.service.Server</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
