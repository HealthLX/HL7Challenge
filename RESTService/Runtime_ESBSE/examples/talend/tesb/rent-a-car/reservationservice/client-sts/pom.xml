 <project xmlns="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.talend.esb.examples.rent-a-car</groupId>
    <artifactId>reservationservice-client-sts</artifactId>
    <name>ReservationService Client STS</name>
    <packaging>bundle</packaging>

    <parent>
        <groupId>org.talend.esb.examples.rent-a-car</groupId>
        <artifactId>reservationservice</artifactId>
        <version>6.1.1</version>
        <relativePath>..</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>org.talend.esb.examples.rent-a-car</groupId>
            <artifactId>reservationservice-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-ws-security</artifactId>
            <version>${cxf.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Require-Bundle>
                            org.apache.cxf.cxf-core,
                            org.apache.servicemix.bundles.spring-beans
                        </Require-Bundle>
						<Import-Package>
							model.reservation-wsdls,
							*
						</Import-Package>
                        <Export-Service>org.talend.services.reservationservice.ReservationService</Export-Service>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>

    </build>
</project>

