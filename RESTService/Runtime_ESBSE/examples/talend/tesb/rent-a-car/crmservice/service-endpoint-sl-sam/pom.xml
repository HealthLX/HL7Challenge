<project xmlns="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.talend.esb.examples.rent-a-car</groupId>
    <artifactId>crmservice-service-endpoint-sl-sam</artifactId>
    <name>CRMService Service Endpoint Locator and SAM</name>
    <packaging>bundle</packaging>

    <parent>
        <groupId>org.talend.esb.examples.rent-a-car</groupId>
        <artifactId>crmservice</artifactId>
        <version>6.1.1</version>
        <relativePath>..</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Require-Bundle>
                            org.apache.cxf.cxf-core,
                            org.apache.servicemix.bundles.spring-beans,org.apache.servicemix.bundles.spring-context,
                            sam-common,sam-agent,locator
                        </Require-Bundle>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>

