# Display the contents of a Service Locator
#
if readlink -f "$0" > /dev/null 2>&1
then
  ME=`readlink -f "$0"`
else
  ME="$0"
fi

TESB_BIN=`dirname "$ME"`
TESB_ADDONS="$TESB_BIN/../add-ons"
CXF_MODULES="$TESB_BIN/../modules"

CLASSPATH="${TESB_ADDONS}/locator/locator-6.1.1.jar:${TESB_ADDONS}/lib/zookeeper-3.4.6.jar:${TESB_ADDONS}/lib/log4j-1.2.17.jar:${CXF_MODULES}/cxf-api-3.1.4.jar"
$JAVA_HOME/bin/java -Xmx128M -cp "${CLASSPATH}" org.talend.esb.servicelocator.client.ServiceLocatorMain "$@"